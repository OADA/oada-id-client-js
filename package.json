{
  "name": "@oada/oada-id-client",
  "version": "1.1.2",
  "description": "OADA identity client library for Node.JS and Browser",
  "main": "index.js",
  "browser": "src/browser.js",
  "unpkg": "dist/bundle.js",
  "files": [
    "index.js",
    "src/",
    "dist/"
  ],
  "scripts": {
    "prepublish": "npm run bundle",
    "bundle": "webpack",
    "test": "mocha test/**/*.test.js",
    "browser-test": "karma start --single-run",
    "cover": "nyc --reporter=text --reporter=lcovonly npm test",
    "browser-cover": "karma start --single-run --cover",
    "dev": "cpx --watch --verbose './' '../oada-cache/node_modules/oada-id-client'",
    "clean": "rm -rf ./coverage"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "useBuiltIns": "entry"
        }
      ]
    ]
  },
  "browserslist": "> 0.25%, not dead",
  "mocha": {
    "reporter": "spec",
    "ui": "bdd",
    "timeout": 2000,
    "require": "./test/setup.js",
    "recursive": true,
    "exit": true
  },
  "directories": {
    "lib": "src",
    "test": "test",
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OADA/oada-id-client-js.git"
  },
  "keywords": [
    "oada",
    "browser",
    "openid",
    "oauth"
  ],
  "author": {
    "name": "Alex Layton",
    "email": "alex@layton.in",
    "url": "http://alex.layton.in"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/OADA/oada-id-client-js/issues"
  },
  "homepage": "https://github.com/OADA/oada-id-client-js",
  "dependencies": {
    "@oada/oada-certs": "^3.1.6",
    "bluebird": "^3.7.2",
    "is-wsl": "^2.1.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-bearer-client-auth": "^1.0.0",
    "oauth-dyn-reg": "^1.0.2",
    "object-assign": "^4.1.1",
    "open": "^8.2.0",
    "pem-jwk": "^2.0.0",
    "superagent": "^6.1.0",
    "urijs": "^1.18.12"
  },
  "devDependencies": {
    "async": "^3.2.0",
    "body-parser": "^1.12.2",
    "brfs": "^2.0.2",
    "chai": "^4.2.0",
    "coffee-script": "^1.9.1",
    "colors": "^1.4.0",
    "cors": "^2.5.3",
    "crypto-browserify": "^3.12.0",
    "express": "^4.9.0",
    "grunt-parallel": "^0.5.1",
    "karma": "^6.0.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-firefox-launcher": "^2.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-vivaldi-launcher": "0.0.1",
    "karma-webpack": "^5.0.0",
    "lodash": "^4.17.21",
    "mocha": "^9.0.0",
    "nyc": "^15.0.0",
    "prettier": "^2.2.1",
    "rewire": "^5.0.0",
    "rewire-webpack-plugin": "^1.0.0",
    "sinon": "^9.0.1",
    "stream-browserify": "^3.0.0",
    "time-grunt": "^2.0.0",
    "url": "^0.11.0",
    "util": "^0.12.3",
    "wd": "^1.12.1",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0",
    "yargs": "^17.0.1"
  }
}
