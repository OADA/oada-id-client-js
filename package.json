{
  "name": "@oada/oada-id-client",
  "version": "1.0.1",
  "description": "OADA identity client library for Node.JS and Browser",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm run bundle",
    "bundle": "webpack",
    "test": "mocha test/**/*.test.js",
    "browser-test": "karma start --single-run",
    "cover": "istanbul cover _mocha",
    "browser-cover": "karma start --single-run --cover",
    "dev": "cpx --watch --verbose './' '../oada-cache/node_modules/oada-id-client'",
    "clean": "rm -rf ./coverage"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "useBuiltIns": "entry"
        }
      ]
    ]
  },
  "browserslist": "> 0.25%, not dead",
  "mocha": {
    "reporter": "spec",
    "ui": "bdd",
    "timeout": 1000,
    "require": "./test/setup.js",
    "recursive": true,
    "exit": true
  },
  "directories": {
    "lib": "src",
    "test": "test",
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OADA/oada-id-client-js.git"
  },
  "keywords": [
    "oada",
    "browser",
    "openid",
    "oauth"
  ],
  "author": {
    "name": "Alex Layton",
    "email": "alex@layton.in",
    "url": "http://alex.layton.in"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/OADA/oada-id-client-js/issues"
  },
  "homepage": "https://github.com/OADA/oada-id-client-js",
  "browser": "dist/bundle.js",
  "dependencies": {
    "@oada/oada-certs": "^1.0.2",
    "bluebird": "^3.7.2",
    "grunt-parallel": "^0.5.1",
    "jsonwebtoken": "^8.5.1",
    "jws": "^4.0.0",
    "jwt-bearer-client-auth": "^1.0.0",
    "oauth-dyn-reg": "^1.0.2",
    "object-assign": "^4.1.1",
    "open": "^7.0.2",
    "pem-jwk": "^2.0.0",
    "superagent": "^5.2.1",
    "urijs": "^1.18.12"
  },
  "devDependencies": {
    "async": "^3.1.1",
    "body-parser": "^1.12.2",
    "brfs": "^2.0.2",
    "chai": "^4.2.0",
    "coffee-script": "^1.9.1",
    "colors": "^1.4.0",
    "cors": "^2.5.3",
    "express": "^4.9.0",
    "istanbul": "^0.4.5",
    "karma": "^4.4.1",
    "karma-coverage": "^2.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-vivaldi-launcher": "0.0.1",
    "karma-webpack": "^4.0.2",
    "lodash": "^4.17.15",
    "mocha": "^7.0.1",
    "prettier-standard": "^16.1.0",
    "rewire": "^4.0.1",
    "rewire-webpack-plugin": "^1.0.0",
    "sinon": "^8.1.1",
    "standard": "^14.3.1",
    "time-grunt": "^2.0.0",
    "uglifyify": "^5.0.2",
    "wd": "^1.12.1",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "yargs": "^15.1.0"
  }
}
