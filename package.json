    "lib": "src",
    "test": "test",
    "example": "examples"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OADA/oada-id-client-js.git"
  },
  "keywords": [
    "oada",
    "browser",
    "openid",
    "oauth"
  ],
  "author": {
